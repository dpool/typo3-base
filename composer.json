{
    "name": "dpool/typo3-base",
	"type": "typo3-cms-extension",
	"description": "Dpool base extension, based on extbase & fluid for TYPO3 CMS",

	"require": {
		"php": "7.2",
		"helhum/dotenv-connector": "^2",
		"helhum/typo3-console": "^5"
	},
	"autoload": {
		"psr-4": {
			"Dpool\\Base\\": "Classes"
		}
	},
	"extra": {
        "typo3/cms": {
            "extension-key": "base"
        },
		"patches": {
			"typo3/cms-core": {
				"Fix for missing multisite routing aspects": "Patches/typo3/cms-core/v9.5.13-site-aware-routing-aspect-af8791f.diff"
			}
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/public/typo3conf/ext/",
			"[ -L .Build/public/typo3conf/ext/base ] || ln -snvf ../../../../. .Build/public/typo3conf/ext/base"
		]
	}
}
